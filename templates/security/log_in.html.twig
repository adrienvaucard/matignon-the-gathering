{% extends 'base.html.twig' %}
{% block body %}
	<nav class="navbar">
		<a class="logo" href="{{ path('LogOutHomePage') }}"><img src="assets/logo.png"></a>
		<a class="main-link" href="{{ path('SignUpPage') }}">SIGN UP</a>
	</nav>

	<section class="container">
		<div class="form-container">
			<p>Log In</p>
			<form action="{{ path('LogInPage') }}" accept-charset="UTF-8" method="post">
				<div class="form-group">
                    <input placeholder="Email" required autofocus="autofocus" class="form-control" type="text" name="_username">
                    <input placeholder="Password" autocomplete="off" class="form-control" type="password" name="_password">
				</div>
				<button name="button" type="submit">LOG IN</button>
			</form>

			<div class="form-footer">
				<a class="sub-link" href="{{ path('SignUpPage') }}">SIGN UP</a>
			</div>
		</div>
	</section>
{% endblock %}
