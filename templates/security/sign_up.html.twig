			{{ form_row(form.password, {'label': 'Mot de passe', 'attr' :{'placeholder': 'Mot de passe'}}) }}
			{{ form_row(form.confirmpassword, {'label': 'Confirmation', 'attr' :{'placeholder': 'Confirmation'}}) }}
